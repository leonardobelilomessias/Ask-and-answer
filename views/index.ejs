        <% perguntas.forEach(pergunta=> { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= pergunta.titulo %></p>
                </div>
                <div class="card-footer"><a href="pergunta/<%= pergunta.id %> "><button class="btn btn-primary">Responder</button></a></div>
            </div>
        <% }) %> 
        <br>
    </div>
    
</body>
